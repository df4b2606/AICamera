<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Material 3 base theme -->
    <style name="Theme.AICameraNew.NoActionBar" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>

        <!-- Optional: App bar, typography, etc -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- Optional: remove action bar -->


    <style name="Theme.AICameraNew.AppBarOverlay" parent="ThemeOverlay.Material3" />
    <style name="Theme.AICameraNew.PopupOverlay" parent="ThemeOverlay.Material3.Dialog" />
</resources>
